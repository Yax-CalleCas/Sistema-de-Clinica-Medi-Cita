@model MediCita.Web.Entidades.Cita
@{
    ViewData["Title"] = "Atender Cita";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Registrar Atención Médica</h4>
                    <span class="badge bg-light text-success">Cita #@Model.IdCita</span>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Atender" method="post">
                        @* El ID se vincula a la propiedad IdCita de la entidad Cita *@
                        <input type="hidden" asp-for="IdCita" />

                        <div class="mb-4">
                            <label asp-for="Estado" class="form-label fw-bold">Resultado de la Consulta</label>
                            <select asp-for="Estado" class="form-select form-select-lg" required>
                                <option value="" disabled selected>-- Seleccione el estado final --</option>
                                <option value="A">Atendida / Finalizada</option>
                                <option value="C">Paciente Ausente / Cancelada</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Nota" class="form-label fw-bold">Observaciones y Diagnóstico</label>
                            <textarea asp-for="Nota"
                                      class="form-control"
                                      rows="6"
                                      placeholder="Ingrese las notas clínicas, recetas o recomendaciones para el paciente..."></textarea>
                            <span asp-validation-for="Nota" class="text-danger small"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="MisCitasMedico" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver a la Agenda
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-check-circle"></i> Finalizar Atención
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}