@model List<MediCita.Web.Entidades.HorarioMedico>

@{
    ViewData["Title"] = "Seleccionar horario";
    int idPaciente = ViewBag.IdPaciente;
    int idMedico = ViewBag.IdMedico;
    DateTime fecha = (DateTime)ViewBag.Fecha;
    decimal precio = ViewBag.Precio;

    bool esHoy = fecha.Date == DateTime.Today;
}

<div class="container py-4">

    <!-- Navegación -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Crear">Médicos</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Horarios
            </li>
        </ol>
    </nav>

    <!-- Encabezado -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold mb-1">
                Horarios disponibles
            </h2>
            <p class="text-muted mb-0">
                Fecha seleccionada: <strong>@fecha.ToLongDateString()</strong>
            </p>
        </div>
        <div class="col-md-4 text-md-end">
            <span class="fs-5 fw-semibold text-primary">
                Precio: S/ @precio.ToString("F2")
            </span>
        </div>
    </div>

    <!-- Selector de fecha -->
    <div class="d-flex gap-2 mb-4">
        <a asp-action="Horarios"
           asp-route-idMedico="@idMedico"
           asp-route-fecha="@DateTime.Today.ToString("yyyy-MM-dd")"
           class="btn @(esHoy ? "btn-primary" : "btn-outline-primary")">
            Hoy
        </a>

        <a asp-action="Horarios"
           asp-route-idMedico="@idMedico"
           asp-route-fecha="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
           class="btn @(!esHoy ? "btn-primary" : "btn-outline-primary")">
            Mañana
        </a>
    </div>

    <!-- Mensaje de error -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Listado de horarios -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var h in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="fw-semibold mb-3">
                                @h.HoraInicio.ToString(@"hh\:mm")
                                -
                                @h.HoraFin.ToString(@"hh\:mm")
                            </h5>

                            <form asp-action="CrearCita" method="post" class="mt-auto">
                                <input type="hidden" name="idPaciente" value="@idPaciente" />
                                <input type="hidden" name="idMedico" value="@idMedico" />
                                <input type="hidden" name="fecha" value="@fecha.ToString("yyyy-MM-dd")" />
                                <input type="hidden" name="horaInicioStr" value="@h.HoraInicio.ToString(@"hh\:mm")" />
                                <input type="hidden" name="horaFinStr" value="@h.HoraFin.ToString(@"hh\:mm")" />
                                <input type="hidden" name="monto" value="@precio" />

                                <button type="submit"
                                        class="btn btn-primary w-100">
                                    Reservar cita
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No hay horarios disponibles para esta fecha.
        </div>
    }

</div>
