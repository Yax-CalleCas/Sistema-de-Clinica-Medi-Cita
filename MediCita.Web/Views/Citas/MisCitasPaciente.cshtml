@model List<MediCita.Web.Entidades.Cita>
@{
    ViewData["Title"] = "Mis Citas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-calendar-check"></i> Mis Citas Médicas</h2>
        <span class="text-muted">Total: @Model.Count</span>
    </div>

    @* Bloque de Alertas (Mantener igual) *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Aún no tienes citas registradas. <a href="@Url.Action("Crear")" class="alert-link">¡Reserva una ahora!</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow rounded-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Especialista (CMP)</th>
                        <th>Fecha</th>
                        <th>Horarios</th>
                        <th>Monto</th>
                        <th>Pago</th> @* <-- Nueva Columna *@
                        <th>Estado Cita</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var c in Model.OrderByDescending(x => x.FechaCita))
                    {
                        <tr>
                            <td class="fw-semibold text-start ps-4">
                                <i class="bi bi-person-badge me-2"></i>@c.CMP
                            </td>
                            <td>@c.FechaCita.ToString("dd/MM/yyyy")</td>
                            <td class="text-muted">
                                <i class="bi bi-clock me-1"></i> @c.HoraInicio.ToString(@"hh\:mm") - @c.HoraFin.ToString(@"hh\:mm")
                            </td>
                            <td class="fw-bold text-success">
                                S/ @c.MontoPagar.ToString("F2")
                            </td>
                            <td>
                                @* Lógica de Pago: Como usamos el nuevo SP, todas nacen pagadas *@
                                <span class="badge bg-light text-success border border-success px-3">
                                    <i class="bi bi-credit-card-2-front me-1"></i> Pagado
                                </span>
                            </td>
                            <td>
                                @switch (c.Estado)
                                {
                                    case "P":
                                        <span class="badge rounded-pill bg-warning text-dark">Pendiente</span>
                                        break;
                                    case "A":
                                        <span class="badge rounded-pill bg-success">Atendida</span>
                                        break;
                                    case "C":
                                        <span class="badge rounded-pill bg-danger">Cancelada</span>
                                        break;
                                    default:
                                        <span class="badge rounded-pill bg-secondary">@c.Estado</span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
