@model IEnumerable<MediCita.Web.Entidades.Medicamento>

@{
    ViewData["Title"] = "Medicamentos";
}

<div class="container mt-4">

    <!-- Encabezado y botón crear -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Listado de Medicamentos</h4>
        <a asp-action="Crear" class="btn btn-primary btn-sm">
            Nuevo Medicamento
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">

            <!-- Tabla de medicamentos -->
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Imagen</th>
                        <th>Nombre</th>
                        <th>Laboratorio</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Promoción</th>
                        <th>Categoría</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="@(!string.IsNullOrWhiteSpace(item.ImagenUrl)
                                                                                 ? item.ImagenUrl
                                                                                 : "https://via.placeholder.com/80x80?text=Sin+Img")"
                                 class="img-thumbnail"
                                 style="max-width:80px; max-height:80px;" />
                        </td>

                                <td>@item.Nombre</td>
                                <td>@item.Laboratorio</td>
                                <td>S/ @item.Precio.ToString("0.00")</td>
                                <td class="text-center">@item.Stock</td>

                                <td class="text-center">
                            @if (string.IsNullOrWhiteSpace(item.Promocion))
                                    {
                                        <span class="badge bg-secondary">Sin descuento</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.Promocion</span>
                                    }
                                </td>

                                <td>@item.Categoria</td>

                                <!-- Botones de acción -->
                                <td class="text-center">
                                    <a asp-action="Editar"
                                       asp-route-id="@item.IdMedicamento"
                                       class="btn btn-sm btn-warning me-1">
                                        Editar
                                    </a>

                                    <form asp-action="Eliminar"
                                          asp-route-id="@item.IdMedicamento"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('¿Seguro de eliminar este medicamento?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <!-- Mensaje cuando no hay registros -->
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                No hay medicamentos registrados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginación -->
    @if (ViewBag.TotalPaginas > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pagina="@i">
                            @i
                        </a>
                    </li>
                }

            </ul>
        </nav>
    }


</div>
