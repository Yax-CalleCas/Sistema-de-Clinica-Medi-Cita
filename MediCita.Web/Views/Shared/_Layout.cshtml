<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCita</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Ajuste para que el footer siempre esté abajo */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .navbar-brand i {
            color: #fff;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary border-bottom shadow-sm mb-3 sticky-top">
            <div class="container">

                <a class="navbar-brand fw-bold fs-3"
                   asp-controller="@(User.Identity!.IsAuthenticated ? "Acceso" : "Home")"
                   asp-action="@(User.Identity!.IsAuthenticated ? "RedireccionRol" : "Index")">
                    <i class="bi bi-hospital-fill"></i> MediCita
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            @* --- SECCIÓN ADMINISTRADOR --- *@
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">Panel</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Medicamentos" asp-action="Index">Farmacia</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="AdminUsuarios" asp-action="Index">Usuarios</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="AdminUsuarios" asp-action="Medicos">Médicos</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Reporte" asp-action="Index">Reportes</a></li>
                            }

                            @* --- SECCIÓN MÉDICO --- *@
                            @if (User.IsInRole("Medico"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Citas" asp-action="MisCitasMedico">Gestionar Citas</a>
                                </li>
                            }

                            @* --- SECCIÓN PACIENTE (Botones con colores suaves) --- *@
                            @if (User.IsInRole("Paciente"))
                            {
                                <li class="nav-item ms-2"><a class="nav-link btn btn-warning text-dark fw-semibold px-3 py-1" asp-controller="Venta" asp-action="Catalogo">Tienda</a></li>
                                <li class="nav-item ms-2"><a class="nav-link btn btn-success text-white fw-semibold px-3 py-1" asp-controller="Citas" asp-action="Crear">Reservar Cita</a></li>
                                <li class="nav-item ms-2"><a class="nav-link btn btn-info text-white fw-semibold px-3 py-1" asp-controller="Citas" asp-action="MisCitasPaciente">Mis Citas</a></li>
                            }
                        </ul>

                        <ul class="navbar-nav ms-auto align-items-center">
                            <li class="nav-item me-3">
                                <span class="text-white opacity-75 small">Bienvenido,</span>
                                <span class="text-white fw-bold">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm rounded-pill px-3" href="javascript:void(0)" onclick="confirmarSalida()">
                                    <i class="bi bi-box-arrow-right"></i> Salir
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <button type="button" class="btn btn-light text-primary fw-bold px-4 shadow-sm rounded-pill"
                                        data-bs-toggle="modal" data-bs-target="#loginModal">
                                    Iniciar Sesión
                                </button>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white py-3 shadow-sm">
        <div class="container text-center">
            <small>© 2025 - <strong>MediCita Web</strong> - Proyecto Cibertec</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            // Captura mensajes de éxito desde el controlador
            var successMsg = @Html.Raw(Json.Serialize(TempData["Success"]));
            if (successMsg) {
                Swal.fire({ icon: 'success', title: '¡Éxito!', text: successMsg, confirmButtonColor: '#0d6efd' });
            }

            // Captura mensajes de error desde el controlador
            var errorMsg = @Html.Raw(Json.Serialize(TempData["Error"]));
            if (errorMsg) {
                Swal.fire({ icon: 'error', title: 'Error', text: errorMsg, confirmButtonColor: '#dc3545' });
            }
        });

        // Función para el botón de Cerrar Sesión
        function confirmarSalida() {
            Swal.fire({
                title: '¿Cerrar sesión?',
                text: "Tu sesión de MediCita finalizará en este equipo.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#dc3545',
                confirmButtonText: 'Sí, salir',
                cancelButtonText: 'Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Cerrando sesión...',
                        allowOutsideClick: false,
                        didOpen: () => { Swal.showLoading(); }
                    });
                    window.location.href = '@Url.Action("Salir", "Home")';
                }
            });
        }
    </script>
</body>
</html>