@model MediCita.Web.Entidades.Usuario

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-5">
    <h2><i class="fas fa-key"></i> Cambiar Contraseña para @Model.NombreCompleto</h2>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        <div class="col-md-6">
            <form asp-action="CambiarClave" method="post">
                <input type="hidden" name="idUsuario" value="@Model.IdUsuario" />

                <div class="form-group">
                    <label for="nuevaClave" class="control-label">Nueva Contraseña</label>
                    <input name="nuevaClave" type="password" class="form-control" required />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-lock"></i> Actualizar Contraseña</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-undo"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>