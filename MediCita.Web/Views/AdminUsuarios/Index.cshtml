@model List<MediCita.Web.Entidades.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid py-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">Gestión de Usuarios</h2>
            <p class="text-muted mb-0">Administración de pacientes, médicos y usuarios del sistema</p>
        </div>

        <a asp-action="CrearPaciente"
           class="btn btn-success fw-semibold px-4 shadow-sm">
            Registrar Paciente
        </a>
    </div>

    <!-- Tarjeta principal -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom fw-semibold">
            Listado de usuarios registrados
        </div>

        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-secondary">
                        <tr>
                            <th>Nombre</th>
                            <th>DNI</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@u.NombreCompleto</td>
                                <td>@(u.DNI ?? "-")</td>
                                <td>@u.Correo</td>

                                <td>
                                    <span class="badge rounded-pill
                                            @(u.NombreRol == "Administrador" ? "bg-danger" :
                                                                                    u.NombreRol == "Médico" ? "bg-primary" :
                                                                                    "bg-info")">
                                    @u.NombreRol
                                </span>
                            </td>

                                <td>
                                    <span class="badge rounded-pill @(u.Activo ? "bg-success" : "bg-secondary")">
                                        @(u.Activo ? "Activo" : "Inactivo")
                                    </span>
                                </td>

                                <td class="text-muted">
                                    @u.FechaRegistro.ToString("dd/MM/yyyy")
                                </td>

                                <td class="text-center">

                                @if (u.NombreRol == "Paciente")
                                    {
                                        <a asp-action="EditarPaciente"
                                           asp-route-id="@u.IdUsuario"
                                           class="btn btn-outline-warning btn-sm fw-semibold me-1">
                                            Editar
                                        </a>
                                    }

                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm fw-semibold"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalClave@u.IdUsuario">
                                        Cambiar clave
                                    </button>

                                    <!-- Modal cambiar clave -->
                                    <div class="modal fade"
                                         id="modalClave@u.IdUsuario"
                                         tabindex="-1"
                                         aria-hidden="true">

                                        <div class="modal-dialog modal-dialog-centered">
                                            <form asp-action="CambiarClave" method="post">
                                                @Html.AntiForgeryToken()

                                                <div class="modal-content border-0 shadow">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fw-semibold">
                                                            Cambiar contraseña
                                                        </h5>
                                                        <button type="button"
                                                                class="btn-close"
                                                                data-bs-dismiss="modal"></button>
                                                    </div>

                                                    <div class="modal-body">
                                                        <input type="hidden"
                                                               name="idUsuario"
                                                               value="@u.IdUsuario" />

                                                        <label class="form-label">
                                                            Nueva contraseña
                                                        </label>
                                                        <input type="password"
                                                               name="nuevaClave"
                                                               class="form-control"
                                                               required />
                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="submit"
                                                                class="btn btn-primary fw-semibold">
                                                            Guardar cambios
                                                        </button>
                                                        <button type="button"
                                                                class="btn btn-secondary"
                                                                data-bs-dismiss="modal">
                                                            Cancelar
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
