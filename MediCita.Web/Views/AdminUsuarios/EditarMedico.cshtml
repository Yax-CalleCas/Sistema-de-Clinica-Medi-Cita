@model MediCita.Web.Entidades.Medico
@{
    ViewData["Title"] = "Editar Médico";
}

<h2>Editar Médico</h2>

<form asp-action="EditarMedico" method="post">
    <input type="hidden" asp-for="IdMedico" />

    <div class="form-group">
        <label>Nombre Completo</label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>DNI</label>
        <input asp-for="DNI" class="form-control" />
    </div>

    <div class="form-group">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Especialidad</label>
        <select asp-for="IdEspecialidad" class="form-control" asp-items="ViewBag.Especialidades"></select>
        <span asp-validation-for="IdEspecialidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>CMP</label>
        <input asp-for="CMP" class="form-control" />
    </div>

    <div class="form-group">
        <label>RNE</label>
        <input asp-for="RNE" class="form-control" />
    </div>

    <div class="form-group">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label>Precio Consulta</label>
        <input asp-for="PrecioConsulta" type="number" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label>Duración Consulta (minutos)</label>
        <input asp-for="DuracionMinutos" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tipo de Servicio</label>
        <input asp-for="TipoServicio" class="form-control" />
    </div>

    <div class="form-group">
        <label>Activo</label>
        <input asp-for="Activo" type="checkbox" />
    </div>

    <div class="form-group">
        <small>Los horarios futuros se regenerarán automáticamente según la plantilla al guardar cambios.</small>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar Médico</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
