@model List<MediCita.Web.Entidades.Medico>

@{
    ViewData["Title"] = "Gestión de Médicos";
}

<h2 class="mb-4">Gestión de Médicos</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="text-end mb-3">
    <a asp-action="CrearMedico" class="btn btn-primary">+ Nuevo Médico</a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Médico</th>
            <th>Especialidad</th>
            <th>CMP</th>
            <th>Teléfono</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td><strong>@m.NombreCompleto</strong><br><small>@m.Correo</small></td>
                <td>@m.Especialidad</td>
                <td>@m.CMP</td>
                <td>@(m.Telefono ?? "-")</td>
                <td>S/ @m.PrecioConsulta</td>
                <td>
                    <span class="badge bg-@(m.Activo ? "success" : "secondary")">
                        @(m.Activo ? "Activo" : "Inactivo")
                    </span>
                </td>
                <td>
                    <a asp-action="EditarMedico" asp-route-id="@m.IdMedico" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>