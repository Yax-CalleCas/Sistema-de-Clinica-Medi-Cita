<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h1 class="h3 fw-bold text-primary mb-0">Panel de Administración </h1>
        <span class="badge bg-light text-dark shadow-sm border p-2">
            <i class="fas fa-calendar-alt text-primary me-2"></i> @DateTime.Now.ToString("dd MMMM, yyyy")
        </span>
    </div>

    <div class="row g-4" id="cardsContainer">
        <div class="col-xl-3 col-md-6">
            <div class="card card-hover shadow-sm border-0 rounded-4 h-100 bg-primary text-white">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-uppercase small mb-1 fw-bold opacity-75">Pacientes</p>
                        <h2 class="display-6 fw-bold mb-0" id="totalPacientes">0</h2>
                    </div>
                    <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-hover shadow-sm border-0 rounded-4 h-100 bg-success text-white">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-uppercase small mb-1 fw-bold opacity-75">Médicos</p>
                        <h2 class="display-6 fw-bold mb-0" id="totalMedicos">0</h2>
                    </div>
                    <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                        <i class="fas fa-user-md fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-hover shadow-sm border-0 rounded-4 h-100 bg-warning text-white">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-uppercase small mb-1 fw-bold opacity-75">Citas de Hoy</p>
                        <h2 class="display-6 fw-bold mb-0" id="citasHoy">0</h2>
                    </div>
                    <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-hover shadow-sm border-0 rounded-4 h-100 bg-info text-white">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-uppercase small mb-1 fw-bold opacity-75">Ingresos Mes</p>
                        <h2 class="display-6 fw-bold mb-0" id="ventasMes">S/ 0.00</h2>
                    </div>
                    <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                        <i class="fas fa-hand-holding-usd fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-dark"><i class="fas fa-star text-warning me-2"></i>Top 5 Medicamentos Más Vendidos</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Medicamento</th>
                                    <th class="text-center">Ventas</th>
                                    <th class="text-end pe-4">Acción</th>
                                </tr>
                            </thead>
                            <tbody id="topMedicamentosBody">
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted">Cargando datos...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div id="contenedorAlertaStock" class="card shadow-sm border-0 rounded-4 h-100 d-none">
                <div class="card-header bg-danger text-white py-3 border-0 rounded-top-4">
                    <h6 class="m-0 fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>Stock Crítico (<span id="cantidadStockBajo">0</span>)</h6>
                </div>
                <div class="card-body">
                    <ul id="listaStockBajo" class="list-group list-group-flush">
                    </ul>
                </div>
            </div>
            <div id="stockOk" class="card shadow-sm border-0 rounded-4 h-100 bg-light">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-muted">
                    <i class="fas fa-check-circle fa-3x text-success mb-2"></i>
                    <p class="mb-0">Todo el stock está correcto</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-hover {
        transition: all 0.3s ease;
    }

        .card-hover:hover {
            transform: translateY(-7px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

    .icon-shape {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>



<script>
    document.addEventListener("DOMContentLoaded", async () => {
        try {
            const response = await fetch('/Admin/ObtenerEstadisticas');
            const result = await response.json();

            if (!result.success) throw new Error(result.message);

            const d = result.data;

            // Llenado de Cards
            document.getElementById("totalPacientes").textContent = d.totalPacientes;
            document.getElementById("totalMedicos").textContent = d.totalMedicosRegistrados;
            document.getElementById("citasHoy").textContent = d.citasHoy;
            document.getElementById("ventasMes").textContent = `S/ ${parseFloat(d.ventasMesActual).toFixed(2)}`;

            // Llenado de Top Medicamentos (ahora es una tabla más profesional)
            const tablaBody = document.getElementById("topMedicamentosBody");
            tablaBody.innerHTML = "";

            if (d.topMedicamentos && d.topMedicamentos.length > 0) {
                d.topMedicamentos.forEach(item => {
                    tablaBody.innerHTML += `
                        <tr>
                            <td class="ps-4 fw-bold">${item.Nombre}</td>
                            <td class="text-center"><span class="badge bg-soft-success text-success border border-success px-3">${item.TotalVendido} unidades</span></td>
                            <td class="text-end pe-4"><button class="btn btn-sm btn-outline-primary rounded-pill">Ver</button></td>
                        </tr>`;
                });
            } else {
                tablaBody.innerHTML = '<tr><td colspan="3" class="text-center py-4">Sin datos</td></tr>';
            }

            // Manejo de Stock Bajo
            if (d.productosStockBajo > 0) {
                document.getElementById("contenedorAlertaStock").classList.remove("d-none");
                document.getElementById("stockOk").classList.add("d-none");
                document.getElementById("cantidadStockBajo").textContent = d.productosStockBajo;

                const listaStock = document.getElementById("listaStockBajo");
                listaStock.innerHTML = "";
                d.stockBajoList.forEach(p => {
                    listaStock.innerHTML += `
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">
                            <span>${p.Nombre}</span>
                            <span class="badge bg-danger">${p.Stock}</span>
                        </li>`;
                });
            }

        } catch (error) {
            console.error("Error:", error);
            // Mostrar mensaje de error visual al usuario
        }
    });
</script>